/* pages/community/community.wxss */
page {
  background: #fff;
}

.container{
  background: #fff;
}

.slide-image {
  width: 100%;
}

.line {
  width: 2rpx;
  height: 40rpx;
  position: relative;
  top: 28rpx;
  right: 50%;
  border-right: 2rpx solid #ccc;
  z-index: 10;
}

.nav-warp .active text {
  color: #2bbcd9;
}

.nav-warp {
  width: 100%;
  height: auto;
  background: #fff;
  position: relative;
  z-index: 9;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
}

.nav-warp .tab {
  display: flex;
  justify-content: center;
}

.tab-txt {
  text-align: center;
  line-height: 90rpx;
  color: #333;
  font-size: 32rpx;
  width: 50%;
  float: left;
  height: 90rpx;
  font-family: "微软雅黑";
  box-sizing: border-box;
}

.tab {
  text-align: center;
  background: rgba(255, 255, 255, 1);
}

.search {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position:relative;
  background: #fff;
  height: 80rpx;
  padding: 0rpx 20rpx;
  border-bottom: 2rpx solid #ccc;
  background: #fff;
  z-index: 9;
}

.input {
  width: 75%;
  background: #f2f2f2;
  border-radius: 50rpx;
  text-align: center;
}

.placeholder {
  font-size: 20rpx;
  font-weight: 400;
  color: #808080;
}

.community-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0rpx 20rpx 20rpx;
}

.community-title{
  padding-right: 20rpx;
}

.community-t{
  padding-right: 20rpx;
}

.community-place-t{
  padding-right: 20rpx;
}

.community{
  background: #fff;
}

.community-image {
  width: 300rpx;
  margin-right: 18rpx;
}

.community-image image {
  width: 300rpx;
  max-height: 200rpx;
}

.community-t {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.community-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

.community-num {
  font-size: 20rpx;
  font-weight: 400;
  line-height: 24rpx;
}

.community-end {
  float: right;
  top: 10rpx;
  width: 120rpx;
  height: 50rpx;
  background: #808080;
  line-height: 50rpx;
  text-align: center;
}

.community-end text {
  color: #fff;
  font-size: 24rpx;
}

.community-kong {
  float: right;
  top: 10rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.community-kong text {
  color: #fff;
  font-size: 24rpx;
}

.community-time {
  background: #2bbcd9;
  height: 40rpx;
  text-align: center;
  line-height: 36rpx;
}

.community-time text {
  font-size: 20rpx;
  color: #fff;
  font-weight: 400;
}

.hidden {
  width: 100%;
  height: auto;
  max-height: 780rpx;
  background: #fff;
  position: relative;
  display: block;
  z-index: 10;
}

.hidden-box {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  z-index: 8;
  bottom:0;
  display: block;
}

.hidden-drop{
  line-height: 80rpx;
}

.hidden-free{
  padding: 0rpx 20rpx;
  height: 80rpx;
}

.hidden-free-bg{
  color: #2BBCD9 !important;
  font-size: 10rpx;
}

.hidden-pay{
  height: 80rpx;
  padding: 0rpx 20rpx;
  border-top: 2rpx solid #ccc;
}

.release{
  position: fixed;
  right: 20rpx;
  bottom: 160rpx;
  width: 100rpx;
  height: 100rpx;
  background: #2BBCD9;
  border-radius: 50%;
  text-align: center;
}

.release-text{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: auto;
  color: #fff;
  height: 100rpx;
  font-size:24rpx;
  width: 50rpx;
  line-height: 24rpx;
}

.community-right{
  width: 400rpx;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}

.mask-content {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
}

.show .mask-content {
  transform: translateY(0);
}

.show .mask {
  display: block;
}

.mask-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 40rpx 30rpx;
}

.mask-header image{
  width: 44rpx;
  height: 44rpx;
}

.mask-body{
  padding: 20rpx 100rpx 40rpx 100rpx;
  line-height: 40rpx;
}

.mask-body text{
  font-size: 20rpx;
  font-weight:400;
}

.mask-footer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 140rpx 120rpx 140rpx;
}

.mask-image{
  text-align: center;
}

.mask-image text{
  font-size: 20rpx;
  line-height: 40rpx;
}

.mask-img image{
  width: 100rpx;
  height: 100rpx;
}

.mask-share{
  background: #fff;
}

.picker-view-column{
  text-align: center;
  line-height: 66rpx;
}