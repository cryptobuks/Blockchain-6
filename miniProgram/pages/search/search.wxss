/* pages/search/search.wxss */

page {
  min-height: 100%;
  background-color: #f4f4f4;
}

.container {
  min-height: 100%;
  background-color: #f4f4f4;
}

.search-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background: #fff;
  font-size: 24rpx;
  color: #333;
}

.search-header .input-box {
  position: relative;
  margin: 2rpx 20rpx;
  float: left;
  width: 580rpx;
  flex: 1;
  height: 59rpx;
  line-height: 59rpx;
  padding: 0 20rpx;
  border-radius: 100rpx;
  background: #F2F2F2;
  box-shadow: 0rpx 0rpx 40rpx #efefef;
}

.search-header .icon {
  position: absolute;
  top: 14rpx;
  left: 20rpx;
  width: 31rpx;
  height: 31rpx;
}

.search-header .del {
  position: absolute;
  top: 3rpx;
  right: 10rpx;
  width: 53rpx;
  height: 53rpx;
  z-index: 10;
}

.search-header .keywrod {
  position: absolute;
  top: 0;
  width: 400rpx;
  height: 59rpx;
  padding: 0rpx 30rpx;
  text-align: center;
  font-size: 20rpx;
}

.search-header .right {
  margin: 15rpx 20rpx 15rpx 0rpx;
  width: 58rpx;
  height: 43rpx;
  line-height: 43rpx;
}

.search-header .left {
  margin: 15rpx 0rpx 15rpx 20rpx;
  height: 43rpx;
  line-height: 43rpx;
}

.no-search {
  height: auto;
  overflow: hidden;
  border-top: 2rpx solid #ccc;
}

.search-keywords {
  background: #fff;
  width: 750rpx;
  height: auto;
  overflow: hidden;
  border-bottom: 2rpx solid #ccc;
}

.search-keywords .h {
  padding: 0 31.25rpx;
  height: 93rpx;
  line-height: 93rpx;
  width: 100%;
  color: #999;
  font-size: 29rpx;
}

.search-keywords .title {
  display: block;
  width: 120rpx;
  float: left;
}

.search-keywords .icon {
  float: left;
  display: block;
  height: 44rpx;
  width: 44rpx;
  margin-right: 20rpx;
}

.search-keywords .items {
  display: flex;
  align-items: center;
}


.search-keywords .items text {
  font-size: 20rpx;
  color: #808080;
}

.search-keywords .recent-search {
  height: auto;
  overflow: hidden;
  padding-left: 30rpx;
  min-height: 80rpx;
  line-height: 80rpx;
  border-top: 2rpx solid #ccc;
}

.search-keywords .item {
  display: inline-block;
  width: auto;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 15rpx;
  border: 1px solid #2BBCD9;
  margin: 0 31.25rpx 31.25rpx 0;
  font-size: 24rpx;
  color: #808080;
  border-radius: 100rpx;
}

.search-keywords .item.active {
  color: #fff;
  background: #2BBCD9;
}

.shelper-list {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  padding: 0 31.25rpx;
}

.shelper-list .item {
  height: 93rpx;
  width: 687.5rpx;
  line-height: 93rpx;
  font-size: 24rpx;
  color: #333;
  border-bottom: 1px solid #f4f4f4;
}

.sort {
  position: fixed;
  top: 91rpx;
  background: #fff;
  width: 100%;
  height: 78rpx;
}

.sort-box {
  background: #fff;
  width: 100%;
  height: 78rpx;
  overflow: hidden;
  padding: 0 30rpx;
  display: flex;
  border-bottom: 1px solid #d9d9d9;
}

.sort-box .item {
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  flex: 1;
  color: #333;
  font-size: 30rpx;
}

.sort-box .item .txt {
  display: block;
  width: 100%;
  height: 100%;
  color: #333;
}

.sort-box .item.active .txt {
  color: #b4282d;
}

.sort-box-category {
  background: #fff;
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 40rpx 40rpx 0 0;
  border-bottom: 1px solid #d9d9d9;
}

.sort-box-category .item {
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  float: left;
  padding: 0 16rpx;
  margin: 0 0 40rpx 40rpx;
  border: 1px solid #666;
  color: #333;
  font-size: 24rpx;
}

.sort-box-category .item.active {
  color: #b4282d;
  border: 1px solid #b4282d;
}

.cate-item {
  margin-top: 175rpx;
  height: auto;
  overflow: hidden;
}

.cate-item .h {
  height: 145rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cate-item .h .name {
  display: block;
  height: 35rpx;
  margin-bottom: 18rpx;
  font-size: 30rpx;
  color: #333;
}

.cate-item .h .desc {
  display: block;
  height: 24rpx;
  font-size: 24rpx;
  color: #999;
}

.cate-item .b {
  width: 750rpx;
  padding: 0 6.25rpx;
  height: auto;
  overflow: hidden;
}

.cate-item .list-filter {
  height: 80rpx;
  width: 100%;
  background: #fff;
  margin-bottom: 6.25rpx;
}

.cate-item .b .item {
  float: left;
  background: #fff;
  width: 365rpx;
  margin-bottom: 6.25rpx;
  padding-bottom: 33.333rpx;
  height: auto;
  overflow: hidden;
  text-align: center;
}

.cate-item .b .item-b {
  margin-left: 6.25rpx;
}

.cate-item .item .img {
  width: 302rpx;
  height: 302rpx;
}

.cate-item .item .name {
  display: block;
  width: 365.625rpx;
  height: 35rpx;
  margin: 11.5rpx 0 22rpx 0;
  text-align: center;
  overflow: hidden;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333;
}

.cate-item .item .price {
  display: block;
  width: 365.625rpx;
  height: 30rpx;
  text-align: center;
  font-size: 30rpx;
  color: #b4282d;
}

.search-result-empty {
  width: 100%;
  height: 100%;
  padding-top: 300rpx;
}

.search-result-empty .icon {
  margin: 0 auto;
  display: block;
  width: 290rpx;
  height: 200rpx;
}

.search-result-empty .text {
  display: block;
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  margin-top: 30rpx;
  color: rgb(204, 204, 204);
}

.clearHistory{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #2BBCD9;
  line-height: 100rpx;
  color: #fff;
  text-align: center;
  z-index: 100;
}

.search-proposal{
  padding: 0rpx 20rpx;
}

/* 活动搜索页开始 */
.community-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 20rpx;
  background: #fff;
}

.community-image {
  margin-right: 18rpx;
}

.community-image image {
  width: 300rpx;
  max-height: 200rpx;
}

.community-t {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.community-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

.community-num {
  font-size: 20rpx;
  font-weight: 400;
  line-height: 24rpx;
}

.community-end {
  float: right;
  top: 10rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.community-end text {
  color: #fff;
  font-size: 24rpx;
}

.community-kong {
  float: right;
  top: 10rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.community-kong text {
  color: #fff;
  font-size: 24rpx;
}

.community-time {
  background: #2bbcd9;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
}

.community-time text {
  font-size: 20rpx;
  color: #fff;
  font-weight: 400;
}

/* 活动搜索页结束 */