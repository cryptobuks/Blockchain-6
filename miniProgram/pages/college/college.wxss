/* pages/college/college.wxss */

page {
  background: #fff;
}

.slide-image {
  width: 100%;
}

.line {
  width: 2rpx;
  height: 40rpx;
  position: relative;
  top: 28rpx;
  right: 50%;
  border-right: 2rpx solid #ccc;
  z-index: 10;
}

.nav-warp .active text {
  color: #2bbcd9;
}

.nav-warp {
  width: 100%;
  height: auto;
  background: #fff;
  position: relative;
  z-index: 9;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
}

.nav-warp .tab {
  display: flex;
  justify-content: center;
}

.tab-txt {
  text-align: center;
  line-height: 90rpx;
  color: #333;
  font-size: 32rpx;
  width: 50%;
  float: left;
  height: 90rpx;
  font-family: "微软雅黑";
  box-sizing: border-box;
}

.tab {
  text-align: center;
  background: rgba(255, 255, 255, 1);
}

.search {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  height: 80rpx;
  padding: 0rpx 20rpx;
  border-bottom: 2rpx solid #ccc;
  background: #fff;
  z-index: 9;
}

.input {
  width: 75%;
  background: #f2f2f2;
  border-radius: 50rpx;
  text-align: center;
}

.placeholder {
  font-size: 20rpx;
  font-weight: 400;
  color: #808080;
}

.hidden {
  width: 100%;
  height: auto;
  max-height: 780rpx;
  background: #fff;
  position: relative;
  display: block;
  z-index: 10;
}

.hidden-box {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  z-index: 8;
  bottom: 0;
  display: block;
}

.hidden-drop {
  line-height: 80rpx;
  padding: 0rpx 20rpx;
}

.release {
  position: fixed;
  right: 20rpx;
  bottom: 160rpx;
  width: 100rpx;
  height: 100rpx;
  background: #2bbcd9;
  border-radius: 50%;
  text-align: center;
}

.release-text {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: auto;
  color: #fff;
  height: 100rpx;
  font-size: 24rpx;
  width: 50rpx;
  line-height: 24rpx;
}

.hidden-condition {
  height: 150rpx;
}

.education {
  border: 2rpx solid #18b4ed;
  line-height: 40rpx;
  border-radius: 40rpx;
  margin-right: 10rpx;
  margin-bottom: 18rpx;
  min-width: 40rpx;
  height: 40rpx;
  float: left;
  text-align: center;
  font-size: 24rpx;
  color: #37383c;
  padding: 6rpx 30rpx;
}

.experienc{
  border: 2rpx solid #18b4ed;
  line-height: 40rpx;
  border-radius: 40rpx;
  margin-right: 10rpx;
  margin-bottom: 18rpx;
  min-width: 40rpx;
  height: 40rpx;
  float: left;
  text-align: center;
  font-size: 24rpx;
  color: #37383c;
  padding: 6rpx 30rpx;
}

.salary{
  border: 2rpx solid #18b4ed;
  line-height: 40rpx;
  border-radius: 40rpx;
  margin-right: 10rpx;
  margin-bottom: 18rpx;
  min-width: 40rpx;
  height: 40rpx;
  float: left;
  text-align: center;
  font-size: 24rpx;
  color: #37383c;
  padding: 6rpx 30rpx;
}

.hidden-footer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}

.hidden-footer .reset{
  width: 50%;
  background: #F2F2F2;
  font-size: 28rpx;
  line-height: 100rpx;
  height: 100rpx;
  color: #2BBCD9;
}

.hidden-footer .submit{
  width: 50%;
  background: #2BBCD9;
  font-size: 28rpx;
  line-height: 100rpx;
  height: 100rpx;
  color: #FFFFFF;
}

.hidden-condition .bg{
  background: #2BBCD9;
  color: #FFFFFF;
}

.college-title text{
  margin-left:22rpx; 
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}

.mask-content {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
}

.show .mask-content {
  transform: translateY(0);
}

.show .mask {
  display: block;
}

.mask-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 40rpx 30rpx;
}

.mask-header image{
  width: 44rpx;
  height: 44rpx;
}

.mask-body{
  padding: 20rpx 100rpx 40rpx 100rpx;
  line-height: 40rpx;
}

.mask-body text{
  font-size: 20rpx;
  font-weight:400;
}

.mask-footer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 140rpx 120rpx 140rpx;
}

.mask-image{
  text-align: center;
}

.mask-image text{
  font-size: 20rpx;
  line-height: 40rpx;
}

.mask-img image{
  width: 100rpx;
  height: 100rpx;
}

.mask-share{
  background: #fff;
}

.picker-view-column{
  text-align: center;
  line-height: 66rpx;
}


