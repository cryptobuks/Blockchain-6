:host{
  background:#fff;
  float:left;
  width:calc(100% - 0px);
  display: block;
}
.list-group{
  display: flex;
  margin:5px 15px;
  border-bottom: 2rpx solid #efefef;
  padding: 10rpx 0rpx 40rpx 0rpx;
  height: 200rpx;
}
 .img{
   width:100%;
}
.list-left{
  flex:0 0 100px;
}
.list-right{
  flex:1;
  margin-left: 20rpx
}
.tltle{
  font-size:28rpx;
  color: #333;
  margin-top: 22rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.rule{
  font-size:24rpx;
  color: #333;
  margin-top: 22rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.desc{
  margin-top: 10rpx;
  color:#e83c3d;
  font-size:24rpx;

}
.price-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top:20px;
}

.price-d{
  display: flex
}

.price{
  margin-left: 4rpx;
  font-size:36rpx;
  color:#e83c3d;
}

.kong{
  font-size: 26rpx;
  color: #a2a2a2;
  margin-right: 30rpx;
}

.num{
  font-size:24rpx;
  float: right;
}
.illustrate{
  font-size:24rpx;
  margin-top:5px;
  color:#7a7a7a;
}
.more{
  float: right;
  color:rgb(67,197,230);
}
.image image{
  padding: 0rpx 10rpx;
  width: 25rpx;
  height: 25rpx;
}

.exchange{
  margin-right: 42rpx
}

.btn{
  width: 160rpx;
  height: 56rpx;
  font-size: 24rpx;
  line-height: 56rpx;
  border-radius: 100rpx;
  border: 3rpx solid #63a9fb;
  color: #63a9fb
}

.btn::after{
  border: 0
}