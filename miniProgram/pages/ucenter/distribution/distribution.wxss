/* pages/ucenter/distribution/distribution.wxss */

page {
  background: #fff;
}

.poster {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.poster-btn {
  position: relative;
  top: -160rpx;
}

.poster-canvas {
  width: 520rpx;
  height: 720rpx;
  margin: 20% auto;
  overflow: hidden;
  background-size: 100% 100%;
  z-index: 100;
}

.myCanvas {
  width: 520rpx;
  height: 720rpx;
  margin: 0;
  padding: 0;
  display: block;
}

.btn {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 42rpx 0rpx 56rpx 0rpx;
  z-index: 100;
}

.share {
  border: 1px solid transparent;
  outline: none;
  margin: 0rpx auto;
  -webkit-appearance: none;
  -moz-appearance: none;
  height: 88rpx;
  line-height: 88rpx;
  width: 50%;
  font-family: PingFang-SC-Regular;
  font-size: 28rpx;
  color: #000;
  cursor: pointer;
  background-color: #f2f2f2;
  text-align: center;
}

.preservation {
  border: 1px solid transparent;
  outline: none;
  margin: 0rpx auto;
  -webkit-appearance: none;
  -moz-appearance: none;
  height: 88rpx;
  line-height: 88rpx;
  width: 50%;
  font-family: PingFang-SC-Regular;
  font-size: 28rpx;
  color: #fff;
  cursor: pointer;
  background-color: #2bbcd9;
  text-align: center;
}

button::after {
  border: 0;
}

.distribution {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  height: 80rpx;
  padding: 0rpx 20rpx;
  border-bottom: 2rpx solid #ccc;
}

.distribution image {
  width: 44rpx;
  height: 44rpx;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}

.mask-content {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
}

.show .mask-content {
  transform: translateY(0);
}

.show .mask {
  display: block;
}

.mask-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 40rpx 30rpx;
}

.mask-header image{
  width: 44rpx;
  height: 44rpx;
}

.mask-body{
  padding: 20rpx 40rpx 40rpx 40rpx;
  line-height: 40rpx;
}

.mask-body text{
  font-size: 24rpx;
  font-weight:400;
}

.mask-footer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 140rpx 120rpx 140rpx;
}

.mask-image{
  text-align: center;
}

.mask-image text{
  font-size: 20rpx;
  line-height: 40rpx;
}

.mask-img image{
  width: 100rpx;
  height: 100rpx;
}

.mask-share{
  background: #fff;
}